button pause DOWN
    kbd ESCAPE
    kbd BACKSPACE

button secret_pause DOWN
    [SHIFT] kbd ESCAPE
    [SHIFT] kbd BACKSPACE

button reset DOWN
    kbd r
    kbd p

button2 walk HELD
    neg kbd LEFT
    pos kbd RIGHT
    neg kbd a
    pos kbd d
    pos kbd e

button jump DOWN HELD
    kbd SPACE
    kbd UP
    # wasd
    kbd w
    kbd COMMA

button use DOWN
    kbd DOWN
    # wasd
    kbd s
    kbd o
    # x
    kbd x
    kbd q

button zoom DOWN
    kbd z
